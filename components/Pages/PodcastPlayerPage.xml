<component name="PodcastPlayerPage" extends="BaseControl">
	<script type="text/brightscript" uri="./PodcastPlayerPage.brs"/>
  <interface>
      <field id="pageParams" type="assocArray" value="{}" onChange="onPageParamsChange" />
  </interface>
  <children>
    <LayoutGroup
      id="podcastArtAndTitleContainer"
      itemSpacings="[50]"
      visible="false">
      <Rectangle
        width="1920">
        <Poster
          id="podcastEpisodeArt"
          loadWidth="650"
          width="650"
          loadHeight="650"
          height="650"
          loadDisplayMode="limitSize"
          translation="[635, 75]" />
      </Rectangle>
      <Label
        id="title"
        width="1920"
        horizAlign="center"
        wrap="true"
        font="font:LargeBoldSystemFont"
        maxLines="1"
      />
    </LayoutGroup>
    <Rectangle
      id="currentSpot"
      height="30"
      width="3"
      color="0xFFFFFFFF"
      visible="false"
    />

    <LayoutGroup
      id="playerContainer"
      itemSpacings="[30]"
      visible="false"
      >
      <LayoutGroup
        id="progressBarContainer"
        itemSpacings="[20, 20]"
        layoutDirection="horiz"
        vertAlignment="center"
        >
        <Label
          id="startTime"
          width="100"
          text="00:00"
        />
        <Rectangle
          id="progressBar"
          height="5"
          width="1000"
          color="0xFFFFFFFF"
        />
        <Label
          id="endTime"
          width="100"
          text="00:00"
        />
      </LayoutGroup>
      <Label
        width="1240"
        horizAlign="center"
        id="playPauseButton"
        color="0xFFFFFFFF"
        >
        <Font role="font" id="playPause" uri="pkg:/source/fonts/code2000.ttf" size="36" />
      </Label>
    </LayoutGroup>
    <BusySpinner
      id="andySpinner"
      visible="true"
    />
  </children>
</component>