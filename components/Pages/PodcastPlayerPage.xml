<component name="PodcastPlayerPage" extends="BaseControl">
	<script type="text/brightscript" uri="./PodcastPlayerPage.brs"/>
  <interface>
      <field id="pageParams" type="assocArray" value="{}" onChange="onPageParamsChange" />
  </interface>
  <children>
    <LayoutGroup
      id="podcastArtAndTitleContainer"
      translation="[460, 100]"
      itemSpacings="[30]"
      visible="false">
      <Rectangle
        width="1000">
        <Poster
          id="podcastEpisodeArt"
          loadWidth="500"
          width="500"
          loadHeight="500"
          height="500"
          loadDisplayMode="limitSize"
          translation="[250, 0]" />
      </Rectangle>
      <Rectangle
        width="1000">
      <Label
        id="title"
        width="1000"
        font="font:LargeBoldSystemFont"
        horizAlign="center"
        wrap="true" />
      </Rectangle>
    </LayoutGroup>
      <Rectangle
        id="currentSpot"
        height="30"
        width="3"
        color="0xFFFFFFFF"
        visible="false"
      />
      <LayoutGroup
        id="progressBarContainer"
        itemSpacings="[20, 20]"
        layoutDirection="horiz"
        vertAlignment="center"
        visible="false"
        >
        <Label
          id="startTime"
          width="100"
          text="00:00"
        />
        <Rectangle
          id="progressBar"
          height="5"
          width="1000"
          color="0xFFFFFFFF"
        />
        <Label
          id="endTime"
          width="100"
          text="00:00"
        />
      </LayoutGroup>
      <BusySpinner
        id="andySpinner"
        visible="true"
		  />
  </children>
</component>